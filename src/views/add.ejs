<% include partials/_header %>

<div class="container p-4">
    <div class="row">
        <div class="col md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/add" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name='name' placeholder="Nombre del departamento" autofocus>
                        </div>

                        <div class="form-group">
                            <input type="number" class="form-control" name='id_employee' placeholder="ID del empleado Lider">
                        </div>

