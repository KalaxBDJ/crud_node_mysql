                            <input type="text" class="form-control" name='city' placeholder="Ciudad">
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">Save</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


