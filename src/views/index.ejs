<% include partials/_header %>

<table class='table table-bordered table-hover'>
    <thead>
        <tr>
            <th>ID</th>
            <th>FIRST NAME</th>
            <th>LAST NAME</th>
            <th>COMPANY</th>
            <th>JOB TITLE</th>
            <th>ACTION</th>
        </tr>
    </thead>
    <tbody>
        <% for(var i=0;i < customers.length ;i++) { %>
            <tr>
                <td><%= customers[i].id %></td>
                <td><%= customers[i].first_name %></td>
                <td><%= customers[i].last_name %></td>
                <td><%= customers[i].company %></td>
                <td><%= customers[i].job_title %></td>
                <td>
                    
                    
                    <a href="/links/delete/<%=customers[i].id%>" class="btn btn-danger">DELETE </a>
                    
                    <a href="/links/edit/<%=customers[i].id%>" class="btn btn-secondary">UPDATE</a>
                </td>
            </tr>
        <% } %>    
    </tbody>
</table>


<% include partials/_footer %>