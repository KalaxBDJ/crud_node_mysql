<% include partials/_header %>

    <div class="container p-4">
        <div class="row">
            <div class="col md-4 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <form action="/links/edit/<%=departments[0].id%>" method="POST">
                            <div class="form-group">
                                <input type="text" class="form-control" name='name' placeholder="Departamento" value="<%=departments[0].name%>" autofocus>
                            </div>
    
                            <div class="form-group">
                                <input type="text" class="form-control" name='id_employee' value="<%=departments[0].id_employee%>" placeholder="ID del empleado lider">
                            </div>
    
                            <div class="form-group">
                                <input type="text" class="form-control" name='city' value="<%=departments[0].city%>" placeholder="ciudad">
                            </div>
    
                            <div class="form-group">
                                <button class="btn btn-success btn-block">Update</button>
                            </div>
    
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
<% include partials/_footer %>
